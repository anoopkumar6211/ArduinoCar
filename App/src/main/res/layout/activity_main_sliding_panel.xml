<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.barunster.arduinocar.views.SlidingUpPanelLayout
        android:id="@+id/sliding_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        app:collapsedHeight="0dp"
        app:flingVelocity="1000"
        app:fadeColor="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                android:tag="@string/tag_no_animation_assigned"
                >
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_slide_panel_main"
            android:tag="@string/tag_no_animation_assigned"
            android:background="@android:color/black">
        </FrameLayout>

        </com.barunster.arduinocar.views.SlidingUpPanelLayout>



    </LinearLayout>
